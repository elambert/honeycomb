#
# Manipulate the disk map, which maps Solaris disk names to serial numbers

# Target diskmap file
DISKMAP=/config/diskmap

# Define disks in cX[tY]dZ format
disk0=c0t0d0
disk1=c0t1d0
disk2=c1t0d0
disk3=c1t1d0

# Output messages to stdout and the log
log() {
    echo "$*"
    logger -t diskmap -p local0.info "$*"
}

# delete the entry for the disk from the diskmap
deletedisk() {
    grep $1 $DISKMAP>/dev/null
    if [ $? != 0 ]; then
	log "Can't find entry in diskmap for $1"
	exit 1;
    fi

    # save a copy, just in case
    cp $DISKMAP $DISKMAP.prev

    grep -v $1 $DISKMAP > $DISKMAP.new
    mv $DISKMAP.new $DISKMAP

    # XXX rm $DISKMAP.prev
}

# Main

log "diskmap $*"

diskname=$1
deletedisk $diskname

exit 0;