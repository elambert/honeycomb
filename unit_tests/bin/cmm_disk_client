#
# This script runs CMMDiskClient app to get/set active disk count on a node.
# It must run on the cluster's internal network, i.e. from cheat or cluster node.
#

NODE=$1
DISKS=$2

if [ "$NODE" = "" ]; then
  echo "Must specify node ID"
  exit 1
else 
  NODE="-Dnode=$1"
fi

if [ "$DISKS" != "" ]; then
  DISKS="-Ddisks=$2"
fi

DIR=`dirname $0`
if [ "$DIR" = "." ]; then
    DIR=`pwd`
fi
DIR=`dirname $DIR`
LIB=$DIR/lib

java -Djava.library.path=$LIB \
-classpath $LIB/honeycomb-utests.jar:$LIB/honeycomb-server.jar:$LIB \
-Dhoneycomb.config.dir=$DIR/config \
$NODE $DISKS com.sun.honeycomb.cm.CMMDiskClient

